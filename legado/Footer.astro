// src/components/Footer.astro (Tema Escuro)
const anoAtual = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <p>&copy; {anoAtual} Sr. IPHONE. Todos os direitos reservados.</p>
  </div>
</footer>

<style>
  .footer {
    /* Fundo um pouco mais escuro ou igual ao body */
    padding-block: 1rem;
    text-align: center;
    font-size: 0.85rem;
    color: #888; /* Texto cinza claro */
  }

  .footer p:last-child {
    margin-bottom: 0;
    margin-top: 0.5rem;
  }
</style>
